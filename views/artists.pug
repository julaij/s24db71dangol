extends layout

block content
  h1= title
  - var results = results
  div(class = 'container-fluid')
    each result, index in results
      div(class='row' onclick=`buy(${index})`)
        div(class='col-sm-2') #{result.artist_name} 
        div(class='col-sm-2') #{result.artist_masterpiece_cost} 
        div(class='col-sm-2') #{result.artist_masterpiece_name}
  script.
    function buy(index) {
      alert("You purchased item " + index);
    }
